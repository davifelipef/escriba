#:kivy 2.0.0

# Creates a custom tooltip for the buttons
<TooltipMDIconButton@MDIconButton+MDTooltip>:
    # Add any additional properties and attributes for your custom class here
    tooltip_text: ''
    tooltip_font_style: 'Body1'

<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        # padding left, up, right, bottom
        padding: dp(20), dp(20), dp(20), dp(0)

        # Handles the top bar layout
        MDBoxLayout:
            id: top_bar
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)

            # spacer
            Widget:
                size_hint_x: 0.6

            # button to call the history screen
            TooltipMDIconButton:
                id: history_button
                icon: "history"
                pos_hint: {"center_y": 0.55}
                tooltip_text: "Histórico de Empréstimos"
                on_release: root.show_history()

            # button to clear all fields and reset all buttons
            TooltipMDIconButton:
                id: erase_button
                icon: "eraser"
                pos_hint: {"center_y": 0.55}
                tooltip_text: "Limpar campos"
                on_release: root.eraser()

        # Handles the main page layout
        MDBoxLayout:
            id: page_wrapper
            orientation: 'vertical'
            spacing: dp(10)

            # title of the app/page
            MDLabel:
                markup: True
                text: 'Escriba [i](Controle Diário de Circulação[/i])'
                halign: 'center'
                font_size: '24sp'
                valign: 'center'
                anchor_x: 'center'
                anchor_y: 'center'
            
            # text informing what the buttons below it do
            MDLabel:
                id: date_and_hour_mode
                text: 'Modo de data e hora:'
                halign: 'center'
                font_size: '16sp'
                valign: 'center'
                anchor_x: 'center'

            # Handles the mode selection row of buttons
            MDBoxLayout:
                id: mode_selection_row
                orientation: 'horizontal'
                size_hint_y: None
                spacing: dp(8)

                # auto button
                MDRaisedButton:
                    id: auto_button
                    text: 'Auto'
                    font_size: '16sp'
                    md_bg_color: 'blue'
                    size_hint: 0.5, None
                    halign: 'center'
                    on_release: 
                        root.toggle_date_and_time(self)
                        root.click_sound()
                
                # manual button
                MDRaisedButton:
                    id: manual_button
                    text: 'Manual'
                    font_size: '16sp'
                    md_bg_color: (0.35, 0.35, 0.35, 1)
                    size_hint: 0.5, None
                    halign: 'center'
                    on_release: 
                        root.toggle_date_and_time(self)
                        root.click_sound()
            
            # select data label
            MDLabel:
                id: select_date
                text: 'Selecionar data:'
                halign: 'center'
                font_size: '16sp'
                valign: 'center'
                anchor_x: 'center'
                disabled: True

            # button that opens the calendar
            MDRaisedButton:
                id: calendar_button
                text: 'Abrir calendário'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: None, None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: dp(20)
                halign: 'center'
                disabled: True
                on_release: 
                    root.show_date_picker()
                    root.click_sound()   

            # selet day period label
            MDLabel:
                id: select_day_period
                text: 'Selecionar período do dia:'
                halign: 'center'
                font_size: '16sp'
                valign: 'center'
                anchor_x: 'center'
                disabled: True    
        
        # Handles the period of the day row of buttons
        MDBoxLayout:
            id: daytime_row
            orientation: 'horizontal'
            size_hint_y: None
            spacing: dp(8)

            # morning button
            MDRaisedButton:
                id: morning_button
                text: 'Manhã'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: 0.5, None
                halign: 'center'
                disabled: True
                on_release: 
                    root.on_manual_period(self)
                    root.click_sound()
            
            # afternoon button
            MDRaisedButton:
                id: afternoon_button
                text: 'Tarde'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: 0.5, None
                halign: 'center'
                disabled: True
                on_release: 
                    root.on_manual_period(self)
                    root.click_sound()
            
            # night button
            MDRaisedButton:
                id: night_button
                text: 'Noite'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: 0.5, None
                halign: 'center'
                disabled: True
                on_release: 
                    root.on_manual_period(self)
                    root.click_sound()

        MDLabel:
            id: age_select
            text: 'Selecionar faixa etária:'
            halign: 'center'
            font_size: '16sp'
            valign: 'center'
            anchor_x: 'center'

        # Handles the age selection row of buttons
        MDBoxLayout:
            id: public_age_row
            orientation: 'horizontal'
            size_hint_y: None
            spacing: dp(8)

            # til 12 years old button
            MDRaisedButton:
                id: twelve_yo_button
                text: 'Até 12'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: 0.5, None
                halign: 'center'
                on_release: 
                    root.age_selection(self)
                    root.click_sound()
            
            # from 13 til 17 years old button
            MDRaisedButton:
                id: thirteen_til_seventeen_yo_button
                text: '13 a 17'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: 0.5, None
                halign: 'center'
                on_release: 
                    root.age_selection(self)
                    root.click_sound()
            
            # from 18 til 59 years old button
            MDRaisedButton:
                id: eighteen_til_fiftynine_yo_button
                text: '18 a 59'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: 0.5, None
                halign: 'center'
                on_release: 
                    root.age_selection(self)
                    root.click_sound()

            # from 60 years old or more button
            MDRaisedButton:
                id: sixty_yo_button
                text: '60 ou mais'
                font_size: '16sp'
                md_bg_color: (0.35, 0.35, 0.35, 1)
                size_hint: 0.5, None
                halign: 'center'
                on_release: 
                    root.age_selection(self)
                    root.click_sound()
